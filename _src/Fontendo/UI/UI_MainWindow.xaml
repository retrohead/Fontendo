<dckm:CustomWindowContentBase x:Class="Fontendo.UI.UI_MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fontendo.UI"
        xmlns:dckm="clr-namespace:Fontendo.DockManager"
        xmlns:controls="clr-namespace:Fontendo.Controls"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        UseLayoutRounding="True"
        mc:Ignorable="d"
        d:DesignHeight="580" d:DesignWidth="980" MinWidth="750" MinHeight="500" Loaded="Window_Loaded" SizeChanged="Window_SizeChanged" Background="Transparent">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Fontendo;component/Resources/Themes/Theme_Templates.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel>
        <Grid x:Name="gridMain">
            <local:UI_MainWindowContent x:Name="mainWindow" />

            <!--#region status box-->
            <StackPanel x:Name="panelSmallProgress" Visibility="Visible" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="0,0,0,0" Grid.Row="1" VerticalAlignment="Center" Width="354" Panel.ZIndex="9999" IsVisibleChanged="panelSmallProgress_IsVisibleChanged">
                <Grid>
                    <Border BorderThickness="1" BorderBrush="{DynamicResource WindowBackgroundBrushMedium}" CornerRadius="3">
                        <Border.Effect>
                            <DropShadowEffect Opacity="1" ShadowDepth="1" Color="{DynamicResource ColorShadowAlpha}" BlurRadius="5" />
                        </Border.Effect>
                    </Border>
                    <Grid>
                        <Border CornerRadius="3" Background="{DynamicResource WindowBackgroundBrushDark}">
                        </Border>
                        <StackPanel>
                            <Grid x:Name="progressGrid">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="140"/>
                                    <RowDefinition Height="70*" MinHeight="70"/>
                                    <RowDefinition Height="28"/>
                                    <RowDefinition Height="28"/>
                                    <RowDefinition Height="5"/>
                                </Grid.RowDefinitions>
                                <Image Source="/Resources/Fontendo_small.png" Height="Auto" Width="Auto" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="None" />
                                <TextBlock x:Name="lblProgress" Text="{Binding Status}" TextWrapping="Wrap" Foreground="{DynamicResource LabelTextBrush}" RenderTransformOrigin="0,0" Background="Transparent" TextAlignment="Center" VerticalAlignment="Center" Height="Auto" Width="Auto" FontSize="12" Margin="10,5,10,5" Grid.Row="1"/>
                                <ProgressBar x:Name="queueProgress" Value="{Binding ProgressQueueValue}" Maximum="100" Minimum="0" HorizontalAlignment="Center" Width="254" Height="16" VerticalAlignment="Center" Margin="0,0,0,0" Grid.Row="2" Foreground="{DynamicResource ProgressBarColor}" Background="{DynamicResource WindowBackgroundBrushDark}" BorderBrush="{DynamicResource ControlBorder}" />
                                <ProgressBar x:Name="mainProgress" Value="{Binding ProgressValue}" Maximum="100" Minimum="0" HorizontalAlignment="Center" Width="254" Height="16" VerticalAlignment="Center" Margin="0,0,0,0" Grid.Row="3" Foreground="{DynamicResource ProgressBarColor}" Background="{DynamicResource WindowBackgroundBrushDark}" BorderBrush="{DynamicResource ControlBorder}" />
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Grid>
            </StackPanel>
            <!--#endregion-->

            <!--#region footer -->
            <Grid x:Name="footerGrid" VerticalAlignment="Bottom" Margin="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid HorizontalAlignment="Stretch">
                    <Label x:Name="lblCopy" Content="{Binding Copyright}" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource LabelTextBrush}" FontSize="11" FontFamily="{DynamicResource FontendoFont}" Margin="0,0,5,0"/>
                </Grid>
            </Grid>
            <!--#endregion-->

            <!--#region  enabled grids-->
            <DockPanel x:Name="panelEnabled" Panel.ZIndex="1000" Background="Transparent" Opacity="0" Visibility="Hidden" />
            <DockPanel x:Name="panelPopUpEnabled" Panel.ZIndex="10000" Background="Transparent" Opacity="0" Visibility="Hidden"/>
            <!--#endregion-->
        </Grid>
    </DockPanel>
</dckm:CustomWindowContentBase>
