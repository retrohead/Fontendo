<UserControl x:Class="Fontendo.Popups.PopupWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Visibility="Hidden"
             Background="#32000000"
             Opacity="1"
             VerticalAlignment="Stretch">

    <DockPanel x:Name="panelPopupContentPanel"
               KeyboardNavigation.TabNavigation="Cycle"
               KeyboardNavigation.ControlTabNavigation="Cycle"
               KeyboardNavigation.DirectionalNavigation="Cycle">
        <Grid x:Name="panelPopupBoxGridWrapper">
            <!-- Drop shadow border -->
            <Border x:Name="popUpBorder" BorderThickness="1"
                    BorderBrush="{DynamicResource ControlBorder}" CornerRadius="10"
              Background="{DynamicResource WindowBackgroundBrushDark}"
                    VerticalAlignment="Stretch">
                <Border.Effect>
                    <DropShadowEffect Opacity="1"
                                      ShadowDepth="1"
                                      BlurRadius="5"
                                      Color="{DynamicResource ColorShadowAlpha}" />
                </Border.Effect>
                <Grid x:Name="panelPopupBoxGrid"
              Margin="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="32"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="100*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Label x:Name="lblPopUpHeader" Content="[No Header Loaded]" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Foreground="{DynamicResource HeaderTextBrush}" FontFamily="{DynamicResource FontendoFont}" FontSize="12" Margin="0,0,0,3"/>
                        <Rectangle x:Name="imgPopUpIcon" Width="16" Height="16" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8,0,0,4" Visibility="Collapsed" />
                    </Grid>

                    <Grid HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0" Grid.Row="0">
                        <Button x:Name="btnCancelPopUp" Cursor="Hand" Style="{DynamicResource TitleBarCloseButtonStyle}">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8BB;" FontSize="10"/>
                        </Button>
                    </Grid>
                    <StackPanel x:Name="panelPopupContent" Grid.Row="1" Panel.ZIndex="0" Margin="5,0,5,5" Background="{DynamicResource WindowBackgroundBrushDark}" />
                </Grid>
            </Border>
        </Grid>
    </DockPanel>
</UserControl>
