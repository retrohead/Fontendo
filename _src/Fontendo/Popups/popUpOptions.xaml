<UserControl x:Class="Fontendo.popUpOptions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:local="clr-namespace:Fontendo"
             xmlns:controls="clr-namespace:Fontendo.Controls"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:Themes="clr-namespace:Xceed.Wpf.Toolkit.Themes;assembly=Xceed.Wpf.Toolkit"
             mc:Ignorable="d" d:DesignWidth="800" Height="421.238" MinWidth="800" MinHeight="325">
    <UserControl.Resources>
    </UserControl.Resources>
    <DockPanel>


        <Grid Width="Auto" Margin="10" DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60*"/>
                <ColumnDefinition Width="40*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="100*" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>

            <DockPanel DockPanel.Dock="Top" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                <!--#region content-->

                <TabControl x:Name="tabsMain" Grid.Row="0" Margin="0" Style="{DynamicResource TabControlStyle1}" FontFamily="{DynamicResource FontendoFont}" FontSize="12" VerticalAlignment="Top" Height="365">
                    <TabItem x:Name="tabOptions" Header="Options" Style="{DynamicResource TabItemStyle1}">

                        <Grid Width="Auto" Margin="10,10,10,10" DockPanel.Dock="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>


                            <Border BorderThickness="1" BorderBrush="{DynamicResource ControlBorder}" CornerRadius="2" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="1" Margin="10">
                            </Border>
                            <DockPanel DockPanel.Dock="Top" Grid.Column="0" Grid.Row="1">
                                <Label  DockPanel.Dock="Top" Content="Customise Form Animation Settings" Background="{DynamicResource WindowBackgroundBrushDark}" FontSize="12" FontFamily="{DynamicResource FontendoFont}" Foreground="{DynamicResource HeaderTextBrush}" Margin="20,0,0,0" Panel.ZIndex="1" MinWidth="100" HorizontalAlignment="Left" />

                                <GroupBox BorderThickness="0" Foreground="{DynamicResource ControlBorder}" Margin="0" Padding="10,5,10,20"  Panel.ZIndex="0">

                                    <Grid Width="Auto" Margin="10,10,10,10" DockPanel.Dock="Top">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="20*"/>
                                            <ColumnDefinition Width="80*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="32" />
                                            <RowDefinition Height="5" />
                                            <RowDefinition Height="32" />
                                        </Grid.RowDefinitions>

                                        <Label Content="Speed" Grid.Row="0" Foreground="{DynamicResource LabelTextBrush}" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12" FontFamily="{DynamicResource FontendoFont}" />
                                        <ComboBox x:Name="comboAnimationSpeed" Grid.Row="0" Grid.Column="1" DisplayMemberPath="Text" FontSize="12" Width="Auto" Height="25" ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedComboItem}" HorizontalAlignment="Stretch" VerticalAlignment="Center" Style="{DynamicResource ComboBoxStyle1}" FontFamily="{DynamicResource FontendoFont}" ItemContainerStyle="{DynamicResource ComboBoxItemStyle1}" />
                                        <Button x:Name="btnTestAnimations" Height="25" HorizontalAlignment="Left" Cursor="Hand" Grid.Row="2" Grid.Column="1" Style="{DynamicResource ButtonStyleText}" Click="btnTestAnimations_Click" Content="Test Animations" FontSize="12" />
                                    </Grid>
                                </GroupBox>
                            </DockPanel>



                            <Border BorderThickness="1" BorderBrush="{DynamicResource ControlBorder}" CornerRadius="2" Grid.Column="1" Margin="10">
                            </Border>
                            <DockPanel DockPanel.Dock="Top" Grid.Column="1">
                                <Label  DockPanel.Dock="Top" Content="Theme Selector" Background="{DynamicResource WindowBackgroundBrushDark}" FontSize="12" FontFamily="{DynamicResource FontendoFont}" Foreground="{DynamicResource HeaderTextBrush}" Margin="20,0,0,0" Panel.ZIndex="1" HorizontalAlignment="Left" />

                                <GroupBox BorderThickness="0" Foreground="{DynamicResource ControlBorder}" Margin="0" Padding="10,-5,10,10"  Panel.ZIndex="0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="300*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <ListView DockPanel.Dock="Top" x:Name="lstThemes" SelectionChanged="lstThemes_SelectionChanged" GridViewColumnHeader.Click="lstThemesColumn_Click" ContextMenuOpening="lstThemes_ContextMenuOpening" ItemsSource="{Binding Items}" SelectedItem="{Binding Path=SelectedListItem}" SelectionMode="Single" Width="Auto" Height="Auto" Margin="5,10,5,5" Grid.Row="0" Grid.Column="0" Style="{DynamicResource ListViewStyle1}" Thumb.DragDelta="lst_DragDelta" ItemContainerStyle="{DynamicResource ListViewItemStyle1}"  FontSize="12" FontFamily="{DynamicResource FontendoFont}">
                                            <ListView.View>
                                                <GridView ColumnHeaderContainerStyle="{DynamicResource GridViewColumnHeaderStyle}">
                                                    <GridViewColumn Header="Theme Name" DisplayMemberBinding="{Binding SubItems, ConverterParameter=0, Converter={StaticResource ListConverter}}" Width="Auto" />
                                                    <GridViewColumn Header="Theme Source" DisplayMemberBinding="{Binding SubItems, ConverterParameter=1, Converter={StaticResource ListConverter}}" Width="Auto" />
                                                    <GridViewColumn Header="Created By" DisplayMemberBinding="{Binding SubItems, ConverterParameter=2, Converter={StaticResource ListConverter}}" Width="Auto" />
                                                    <GridViewColumn Header="Created On" DisplayMemberBinding="{Binding SubItems, ConverterParameter=3, Converter={StaticResource ListConverter}}" Width="Auto" />
                                                </GridView>
                                            </ListView.View>
                                        </ListView>
                                    </Grid>
                                </GroupBox>
                            </DockPanel>
                        </Grid>

                    </TabItem>
                    <TabItem x:Name="tabTheme" Header="Theme Editor" Style="{DynamicResource TabItemStyle1}">

                        <Grid Width="Auto" Margin="10,10,10,10" DockPanel.Dock="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70*"/>
                                <ColumnDefinition Width="30*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="100*" />
                                <RowDefinition Height="32" />
                            </Grid.RowDefinitions>

                            <Border BorderThickness="1" BorderBrush="{DynamicResource ControlBorder}" CornerRadius="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="10">
                            </Border>
                            <DockPanel DockPanel.Dock="Top" Grid.Column="0" Grid.ColumnSpan="2">
                                <Label  DockPanel.Dock="Top" Content="Customise Theme Colours" Background="{DynamicResource WindowBackgroundBrushDark}" FontSize="12" FontFamily="{DynamicResource FontendoFont}" Foreground="{DynamicResource HeaderTextBrush}" Margin="20,0,0,0" Panel.ZIndex="1" MinWidth="100" HorizontalAlignment="Left" />

                                <GroupBox BorderThickness="0" Foreground="{DynamicResource ControlBorder}" Margin="0" Padding="10,5,10,20"  Panel.ZIndex="0">
                                    <Grid Height="Auto" Margin="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="400*"/>
                                            <ColumnDefinition Width="200*"/>
                                            <ColumnDefinition Width="400*"/>
                                            <ColumnDefinition Width="200*"/>
                                            <ColumnDefinition Width="400*"/>
                                            <ColumnDefinition Width="200*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="32"/>
                                            <RowDefinition Height="32"/>
                                            <RowDefinition Height="32"/>
                                            <RowDefinition Height="32"/>
                                            <RowDefinition Height="32"/>
                                            <RowDefinition Height="32"/>
                                        </Grid.RowDefinitions>
                                        <Label Content="Light Colour" Foreground="{DynamicResource LabelTextBrush}" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12" FontFamily="{DynamicResource FontendoFont}" />
                                        <controls:ColorPickerButton x:Name="ColorLight" Grid.Row="0" Grid.Column="1" SelectedColorChanged="Color_SelectedColorChanged" PreviewSelectedColorChanged="Color_PreviewSelectedColorChanged" Margin="0,2,0,2" SelectedColor="{DynamicResource ColorLight}" EnableAlphaChannel="False"
                                                              Width="25" Height="25" Cursor="Hand" />

                                        <Label Content="Medium Colour" Foreground="{DynamicResource LabelTextBrush}" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12" FontFamily="{DynamicResource FontendoFont}" />
                                        <controls:ColorPickerButton x:Name="ColorMedium" Grid.Row="1" Grid.Column="1" SelectedColorChanged="Color_SelectedColorChanged" PreviewSelectedColorChanged="Color_PreviewSelectedColorChanged" Margin="0,2,0,2" SelectedColor="{DynamicResource ColorMedium}" EnableAlphaChannel="False"
                                                              Width="25" Height="25" Cursor="Hand" />

                                        <Label Content="Dark Colour" Foreground="{DynamicResource LabelTextBrush}" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12" FontFamily="{DynamicResource FontendoFont}" />
                                        <controls:ColorPickerButton x:Name="ColorDark" Grid.Row="2" Grid.Column="1" SelectedColorChanged="Color_SelectedColorChanged" PreviewSelectedColorChanged="Color_PreviewSelectedColorChanged" Margin="0,2,0,2" SelectedColor="{DynamicResource ColorDark}" EnableAlphaChannel="False" 
                                                               Width="25" Height="25" Cursor="Hand" />

                                        <Label Content="Transparency Colour" Foreground="{DynamicResource LabelTextBrush}" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12" FontFamily="{DynamicResource FontendoFont}" />
                                        <controls:ColorPickerButton x:Name="ColorPanelAlpha" Grid.Row="3" Grid.Column="1" SelectedColorChanged="Color_SelectedColorChanged" PreviewSelectedColorChanged="Color_PreviewSelectedColorChanged" Margin="0,2,0,2" SelectedColor="{DynamicResource ColorPanelAlpha}" 
                                                               Width="25" Height="25" Cursor="Hand" />
                                        <Label Content="Selected Colour" Foreground="{DynamicResource LabelTextBrush}" Grid.Column="0" Grid.Row="4" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12" FontFamily="{DynamicResource FontendoFont}" />
                                        <controls:ColorPickerButton x:Name="ColorSelected" Grid.Row="4" Grid.Column="1" SelectedColorChanged="Color_SelectedColorChanged" PreviewSelectedColorChanged="Color_PreviewSelectedColorChanged" Margin="0,2,0,2" SelectedColor="{DynamicResource ColorSelected}" 
                                                               Width="25" Height="25" Cursor="Hand" />

                                        <Label Content="Highlight Colour" Foreground="{DynamicResource LabelTextBrush}" Grid.Column="0" Grid.Row="5" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12" FontFamily="{DynamicResource FontendoFont}" />
                                        <controls:ColorPickerButton x:Name="ColorHighlight" Grid.Row="5" Grid.Column="1" SelectedColorChanged="Color_SelectedColorChanged" PreviewSelectedColorChanged="Color_PreviewSelectedColorChanged" Margin="0,2,0,2" SelectedColor="{DynamicResource ColorHighlight}" 
                                                              Width="25" Height="25" Cursor="Hand" />


                                        <Label Content="Header Text / Icon Colour" Foreground="{DynamicResource LabelTextBrush}" Grid.Column="2" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12" FontFamily="{DynamicResource FontendoFont}" />
                                        <controls:ColorPickerButton x:Name="ColorHeaderText" Grid.Row="0" Grid.Column="3" SelectedColorChanged="Color_SelectedColorChanged" PreviewSelectedColorChanged="Color_PreviewSelectedColorChanged" Margin="0,2,0,2" SelectedColor="{DynamicResource ColorHeaderText}" EnableAlphaChannel="False"
                                                              Width="25" Height="25" Cursor="Hand" />

                                        <Label Content="Label Colour" Foreground="{DynamicResource LabelTextBrush}" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12" FontFamily="{DynamicResource FontendoFont}" />
                                        <controls:ColorPickerButton x:Name="ColorLabelText" Grid.Row="1" Grid.Column="3" SelectedColorChanged="Color_SelectedColorChanged" PreviewSelectedColorChanged="Color_PreviewSelectedColorChanged" Margin="0,2,0,2" SelectedColor="{DynamicResource ColorLabelText}" EnableAlphaChannel="False"
                                                              Width="25" Height="25" Cursor="Hand" />

                                        <Label Content="Active Text Colour" Foreground="{DynamicResource LabelTextBrush}" Grid.Column="2" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12" FontFamily="{DynamicResource FontendoFont}" />
                                        <controls:ColorPickerButton x:Name="ColorActiveText" Grid.Row="2" Grid.Column="3" SelectedColorChanged="Color_SelectedColorChanged" PreviewSelectedColorChanged="Color_PreviewSelectedColorChanged" Margin="0,2,0,2" SelectedColor="{DynamicResource ColorActiveText}" EnableAlphaChannel="False"
                                                              Width="25" Height="25" Cursor="Hand" />

                                        <Label Content="Inactive Text Colour" Foreground="{DynamicResource LabelTextBrush}" Grid.Column="2" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12" FontFamily="{DynamicResource FontendoFont}" />
                                        <controls:ColorPickerButton x:Name="ColorInactiveText" Grid.Row="3" Grid.Column="3" SelectedColorChanged="Color_SelectedColorChanged" PreviewSelectedColorChanged="Color_PreviewSelectedColorChanged" Margin="0,2,0,2" SelectedColor="{DynamicResource ColorInactiveText}" EnableAlphaChannel="False"
                                                              Width="25" Height="25" Cursor="Hand" />

                                        <Label Content="Positive Colour" Foreground="{DynamicResource LabelTextBrush}" Grid.Column="2" Grid.Row="4" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12" FontFamily="{DynamicResource FontendoFont}" />
                                        <controls:ColorPickerButton x:Name="ColorPositiveText" Grid.Row="4" Grid.Column="3" SelectedColorChanged="Color_SelectedColorChanged" PreviewSelectedColorChanged="Color_PreviewSelectedColorChanged" Margin="0,2,0,2" SelectedColor="{DynamicResource ColorPositiveText}" EnableAlphaChannel="False" 
                                                              Width="25" Height="25" Cursor="Hand" />

                                        <Label Content="Negative Colour" Foreground="{DynamicResource LabelTextBrush}" Grid.Column="2" Grid.Row="5" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12" FontFamily="{DynamicResource FontendoFont}" />
                                        <controls:ColorPickerButton x:Name="ColorNegativeText" Grid.Row="5" Grid.Column="3" SelectedColorChanged="Color_SelectedColorChanged" PreviewSelectedColorChanged="Color_PreviewSelectedColorChanged" Margin="0,2,0,2" SelectedColor="{DynamicResource ColorNegativeText}" EnableAlphaChannel="False" 
                                                              Width="25" Height="25" Cursor="Hand" />

                                        <Label Content="Border Colour" Foreground="{DynamicResource LabelTextBrush}" Grid.Column="4" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12" FontFamily="{DynamicResource FontendoFont}" />
                                        <controls:ColorPickerButton x:Name="ColorControlBorder" Grid.Row="0" Grid.Column="5" SelectedColorChanged="Color_SelectedColorChanged" PreviewSelectedColorChanged="Color_PreviewSelectedColorChanged" Margin="0,2,0,2" SelectedColor="{DynamicResource ColorControlBorder}" 
                                                              Width="25" Height="25" Cursor="Hand" />

                                        <Label Content="Border Active Colour" Foreground="{DynamicResource LabelTextBrush}" Grid.Column="4" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12" FontFamily="{DynamicResource FontendoFont}" />
                                        <controls:ColorPickerButton x:Name="ColorControlHighlightBorder" Grid.Row="1" Grid.Column="5" SelectedColorChanged="Color_SelectedColorChanged" PreviewSelectedColorChanged="Color_PreviewSelectedColorChanged" Margin="0,2,0,2" SelectedColor="{DynamicResource ColorControlHighlightBorder}"
                                                              Width="25" Height="25" Cursor="Hand" />
                                    </Grid>
                                </GroupBox>
                            </DockPanel>
                            <Grid Grid.Row="1" Margin="10,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="btnSaveTheme" Height="25" HorizontalAlignment="Left" Cursor="Hand" Grid.Row="0" Style="{DynamicResource ButtonStyleText}" Click="btnSaveTheme_Click" Content="Save Theme To Collection" FontSize="12" />
                            </Grid>
                        </Grid>

                    </TabItem>
                </TabControl>
                <!--#endregion-->
            </DockPanel>

            <StackPanel x:Name="buttons" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center">
                <Grid HorizontalAlignment="Right">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="27"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnAccept" Width="25" Height="25" HorizontalAlignment="Right" Cursor="Hand" Grid.Column="0" Style="{DynamicResource ButtonStyleImage}" Click="btnAccept_Click">
                        <Image HorizontalAlignment="Left" Margin="0" VerticalAlignment="Center" Source="/Resources/accept_green.png" Width="16" Height="16"/>
                    </Button>
                </Grid>
            </StackPanel>
        </Grid>

    </DockPanel>
</UserControl>
