<UserControl x:Class="Fontendo.Controls.DockablePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Fontendo.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border Grid.Row="0" Background="{DynamicResource WindowBackgroundBrushDark}" BorderBrush="{DynamicResource ControlBorder}" BorderThickness="1">

        <Grid>
        <Grid.RowDefinitions>
            <!-- Header row -->
            <RowDefinition Height="25"/>
            <!-- Content row -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="{DynamicResource WindowBackgroundBrushDark}" BorderBrush="{DynamicResource ControlBorder}" BorderThickness="0,0,0,1">

                <Grid Background="{DynamicResource WindowBackgroundBrushMedium}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="labelHeader"
                           Text="Dockable Panel"
                           Foreground="{DynamicResource HeaderTextBrush}"
                           VerticalAlignment="Center"
                           Margin="5,0,0,0"/>

                    <Button x:Name="btnPopOut"
                        Grid.Column="1" FontSize="10" Margin="0,0,0,0"
                        FontFamily="Segoe MDL2 Assets" Content="&#xE922;"
                        Click="btnPopOut_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{DynamicResource WindowBackgroundBrushMedium}"/>
                                <Setter Property="Foreground" Value="{DynamicResource ControlBorder}"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="Bd"
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="0"
                                                Padding="4">
                                                <ContentPresenter x:Name="content" HorizontalAlignment="Center"
                                              VerticalAlignment="Center" TextBlock.TextAlignment="Left"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <!-- Hover -->
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bd" Property="Background"
                                        Value="{DynamicResource ListViewItemMouseOver}"/>
                                                    <Setter TargetName="content" Property="TextBlock.Foreground"
                                        Value="{DynamicResource ControlTextActive}"/>
                                                </Trigger>
                                                <!-- Pressed -->
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="Bd" Property="Background"
                                        Value="{DynamicResource ButtonSelectedBrush}"/>
                                                    <Setter TargetName="content" Property="TextBlock.Foreground"
                                        Value="{DynamicResource ControlTextActive}"/>
                                                </Trigger>
                                                <!-- Disabled -->
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter TargetName="Bd" Property="Opacity" Value="0.5"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                </Grid>
            </Border>

            <!-- Scrollable content -->
        <ScrollViewer x:Name="panelScrollablePanel"
                      Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled" Background="{DynamicResource WindowBackgroundBrushDark}" Style="{DynamicResource GalleryScrollViewerStyle}">
            <!-- Put your docked content here -->
            <StackPanel x:Name="ContentHost"/>
        </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
